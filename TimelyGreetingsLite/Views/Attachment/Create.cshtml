@model TimelyGreetingsLite.Models.Attachment

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Create</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Attachment</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })


        
        <div class="form-group">
           File Upload
            <div class="col-md-10">
                @using (Html.BeginForm("Create", "Attachment", FormMethod.Post, new { enctype = "multipart/form-data", id = Model.GreetingID }))
                {
                    <input id="fileUpload1" name="fileUpload1" type="file"  />
                    <input id="btnfileUpload" name="btnfileUpload" type="submit" value="Upload" class="save"  />
                }                
            </div>
        </div>

        

        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                @*<input type="submit" value="Create" class="btn btn-default" />*@
            </div>
        </div>
    </div>
}

